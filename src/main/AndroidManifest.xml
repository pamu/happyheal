<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.happyheal.happyhealapp"
          android:versionCode="1"
          android:versionName="1.0.0">

    <uses-sdk
            android:minSdkVersion="15"
            android:targetSdkVersion="23"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:launchMode="singleTop"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme"
            android:name=".app.HappyHealApp">

        <activity
                android:name=".ui.main.MainActivity"
                android:label="@string/app_name">
        </activity>

        <activity android:name=".ui.wizard.WizardActivity"
                  android:label="Wizard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.previews.PreviewsActivity" android:label="Previews"></activity>

        <activity android:name=".SampleActivity" android:label="Sample"/>

    </application>

</manifest>
